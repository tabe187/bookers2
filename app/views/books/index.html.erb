<% if flash[:notice] %>
 　　<div class="flash">
   　　<%= flash[:notice] %>
 　　</div>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'users/info', user: @user, book: @book %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <p>Title:<%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>