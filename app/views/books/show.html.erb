<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">  
    
<h2>User info</h2>
<%= image_tag @book.user.get_profile_image(63,63) %><br>
<table class="table">
  <tbody>
    <tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @book.user.name %>
	  </th><br>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @book.user.introduction %></th><br>
  </tr>
</tbody>
</table>
  <div class="row">
    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>



<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new do |f| %>
  <div class="form-group">
    <label>Title</label><br>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label>Opinion</label><br>
      <%= f.text_area :body %><br>
  </div>
  <div class="actions">
      <%= f.submit 'Creat Book', class: "btn btn-success" do %>
      <% end %>
  </div>
<% end %>
    



      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(40, 40) %> <br>
              <%= link_to @book.user.name, user_path(@book.user.id) %> 
              </td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
              
            </tr>
          </tbody>  
        </table>
      </div>
    </div>
  </div>
</main>


