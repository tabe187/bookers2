<% if flash[:notice] %>
 　　<div class="flash">
   　　<%= flash[:notice] %>
 　　</div>　
<% end %>

<%= render 'users/info', user: @user, book: @book_new %>

<div>
  <h1>Book detail</h1>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path, method: :delete %>
  <% end %>
</div>

