<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">  
    
    
    
<h2>User info</h2>
<%= image_tag @user.get_profile_image(63,63) %><br>
<table class="table">
  <tbody>
    <tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %>
	  </th><br>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th><br>
  </tr>
</tbody>
</table>
  <div class="row">
    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>



<h2 class="mt-3">New book</h2>
<%= form_with model: @book do |f| %>
  <div class="form-group">
    <label>Title</label><br>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label>Opinion</label><br>
      <%= f.text_area :body %><br>
  </div>
  <div class="actions">
      <%= f.submit 'Creat Book', class: "btn btn-success" do %>
      <% end %>
  </div>
<% end %>
    
    
    
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %> 
          <tr>
            <td><%= image_tag book.user.get_profile_image(40, 40) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
</main>

